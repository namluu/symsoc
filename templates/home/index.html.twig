{% extends 'base.html.twig' %}

{% block title %}{% trans %}Posts{% endtrans %}{% endblock %}

{% block body %}
    <div class="feed">
        <div class="feed-list">
        {% for post in posts %}
            <div class="item">
                <a href="/users/minhpq331/mypage" class="avatar">
                    <img src="{{ post.user.avatar }}">
                </a>
                <div class="content">
                    <div class="header">
                        <a href="">{{ post.title }}</a>
                    </div>
                    <div class="detail">{{ post.content }}</div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}